# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_NAME=Telegram Lead Monitor
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://telegram_monitor:dev_password@localhost:5432/telegram_monitor

# ==============================================
# REDIS CONFIGURATION
# ==============================================
# Redis connection URL for caching and session storage
REDIS_URL=redis://localhost:6379/0

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Secret key for JWT tokens (must be at least 32 characters)
# Generate: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production-min-32-characters-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================
# TELEGRAM API CREDENTIALS
# ==============================================
# Get your API credentials at https://my.telegram.org/apps
# These are required for Telegram integration
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# ==============================================
# ENCRYPTION
# ==============================================
# Fernet encryption key for storing sensitive data (Telegram session tokens)
# Generate in Python:
#   from cryptography.fernet import Fernet
#   print(Fernet.generate_key().decode())
ENCRYPTION_KEY=your-fernet-encryption-key-base64-encoded

# ==============================================
# LLM API CONFIGURATION
# ==============================================
# LiteLLM Proxy with OpenAI-compatible API
# Documentation: See llm.codenrock.com.md for full details
LLM_API_URL=https://llm.codenrock.com

# LiteLLM Master Key (Bearer token authentication)
# Production key: sk-litellm-5d72bc9cb76846620c011e7708fcf4c9
LLM_API_KEY=your-llm-api-key

# Available models:
# - gpt-5-mini (recommended): Latest GPT-5 mini model, 400K context, $0.00075/$0.003 per 1K tokens
# - gpt-4o-mini: Fast and cost-effective, 128K context, $0.00015/$0.0006 per 1K tokens
# - gpt-4o: High quality, 128K context, $0.002/$0.006 per 1K tokens
# - claude-sonnet-4: Anthropic Claude, 200K context, $0.003/$0.015 per 1K tokens
# - gemini-2.5-pro: Google Gemini, 2M context, $0.00125/$0.005 per 1K tokens
LLM_MODEL=gpt-5-mini

# LLM request timeout in seconds (max 600 for proxy)
LLM_TIMEOUT=120

# ==============================================
# EMAIL NOTIFICATIONS (SMTP)
# ==============================================
# SMTP server configuration for sending email notifications
# For Gmail:
#   1. Use smtp.gmail.com with port 587
#   2. Enable 2-Factor Authentication
#   3. Create an "App Password" in Google Account settings
#   4. Use the App Password as SMTP_PASSWORD

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@telegram-lead-monitor.com
SMTP_FROM_NAME=Telegram Lead Monitor

# ==============================================
# VERIFICATION & TOKENS
# ==============================================
# Email verification token expiration (hours)
VERIFICATION_TOKEN_EXPIRE_HOURS=24

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Frontend URL for redirects and CORS
FRONTEND_URL=http://localhost:3000

# CORS allowed origins (JSON array format)
CORS_ORIGINS=["http://localhost:3000"]

# ==============================================
# OPTIONAL: ADVANCED SETTINGS
# ==============================================
# Uncomment and configure these if needed

# Worker settings (for background message processing)
# WORKER_CONCURRENCY=4
# WORKER_BATCH_SIZE=10
# WORKER_SLEEP_INTERVAL=5

# Rate limiting (requests per minute)
# RATE_LIMIT_PER_MINUTE=60

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# Session storage
# SESSION_STORAGE_PATH=./sessions
